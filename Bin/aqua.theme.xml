            <image source="aqua.skin" placement=center x1=17 y1=128 x2=34 y2=170 color=#FFFFFFFF />
            <image source="aqua.skin" placement=top x1=17 y1=117 x2=34 y2=128 color=#FFFFFFFF />
            <image source="aqua.skin" placement=bottom x1=17 y1=170 x2=34 y2=181 color=#FFFFFFFF />
        </state>

    </style>

    <style name="cursor">

        <state name="normal">
            <image source="aqua.skin" placement=topleft x1=239 y1=227 x2=256 y2=256 color=#FFFFFFFF />
        </state>

    </style>
</theme>
