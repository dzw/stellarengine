<?xml version="1.0" standalone=no>

<!-- Nuclex GUI Theme

     Diese Datei beschreibt das Design der Nuclex-GUI für die zfx-Demo.

     Kann nach belieben angepasst werden, jedoch sind einige der Features in
     der Demo noch mehr oder weniger hardgecodet.
-->

<!-- Unser Theme heisst 'XP', ein billiges Rip-Off des Windows-Stils ;-) -->
<theme name="xp">

    <!-- Von diesem Thema benötigte Resourcen -->
    <resources>
    
        <!-- Auf dieser Bitmap-Resource liegen alle Bildchen für unsere GUI -->
        <bitmap name="xp.skin" stream="xp.theme.png" />

        <!-- Der Font für unsere GUI -->
        <font name="xp.font" stream="tahoma.ttf" size=12 />
        
    </resources>

    <!-- Fenster -->
    <style name="window">

        <state name="normal">
            <image source="xp.skin" placement=topleft x1=0 y1=168 x2=3 y2=171 color=#FFFFFFFF />
            <image source="xp.skin" placement=top x1=3 y1=168 x2=61 y2=171 color=#FFFFFFFF />
            <image source="xp.skin" placement=topright x1=61 y1=168 x2=64 y2=171 color=#FFFFFFFF />
            <image source="xp.skin" placement=left x1=0 y1=171 x2=3 y2=229 color=#FFFFFFFF />
            <image source="xp.skin" placement=center x1=3 y1=171 x2=61 y2=229 color=#FFFFFFFF />
            <image source="xp.skin" placement=right x1=61 y1=171 x2=64 y2=229 color=#FFFFFFFF />
            <image source="xp.skin" placement=bottomleft x1=0 y1=229 x2=3 y2=233 color=#FFFFFFFF />
            <image source="xp.skin" placement=bottom x1=3 y1=229 x2=61 y2=233 color=#FFFFFFFF />
            <image source="xp.skin" placement=bottomright x1=61 y1=229 x2=64 y2=233 color=#FFFFFFFF />
        </state>

    </style>

    <!-- Der Text-Widget... -->
    <style name="text">

        <state name="normal">
            <text source="xp.font" alignment=left color=#FF000000 />
        </state>

    </style>

    <!-- Der Eingabe-Widget... -->
    <style name="input">

        <state name="disabled">
            <image source="xp.skin" placement=topleft x1=0 y1=149 x2=1 y2=150 color=#FFFFFFFF />
            <image source="xp.skin" placement=top x1=1 y1=149 x2=63 y2=150 color=#FFFFFFFF />
            <image source="xp.skin" placement=topright x1=63 y1=149 x2=64 y2=150 color=#FFFFFFFF />
            <image source="xp.skin" placement=left x1=0 y1=150 x2=1 y2=166 color=#FFFFFFFF />
            <image source="xp.skin" placement=center x1=1 y1=150 x2=63 y2=166 color=#FFFFFFFF />
            <image source="xp.skin" placement=right x1=63 y1=150 x2=64 y2=166 color=#FFFFFFFF />
            <image source="xp.skin" placement=bottomleft x1=0 y1=166 x2=1 y2=167 color=#FFFFFFFF />
            <image source="xp.skin" placement=bottom x1=1 y1=166 x2=63 y2=167 color=#FFFFFFFF />
            <image source="xp.skin" placement=bottomright x1=63 y1=166 x2=64 y2=167 color=#FFFFFFFF />
            <text source="xp.font" alignment=left x=+4 y=-2 color=#FF808080 />
        </state>

        <state name="normal">
            <image source="xp.skin" placement=topleft x1=0 y1=149 x2=1 y2=150 color=#FFFFFFFF />
            <image source="xp.skin" placement=top x1=1 y1=149 x2=63 y2=150 color=#FFFFFFFF />
            <image source="xp.skin" placement=topright x1=63 y1=149 x2=64 y2=150 color=#FFFFFFFF />
            <image source="xp.skin" placement=left x1=0 y1=150 x2=1 y2=166 color=#FFFFFFFF />
            <image source="xp.skin" placement=center x1=1 y1=150 x2=63 y2=166 color=#FFFFFFFF />
            <image source="xp.skin" placement=right x1=63 y1=150 x2=64 y2=166 color=#FFFFFFFF />
            <image source="xp.skin" placement=bottomleft x1=0 y1=166 x2=1 y2=167 color=#FFFFFFFF />
            <image source="xp.skin" placement=bottom x1=1 y1=166 x2=63 y2=167 color=#FFFFFFFF />
            <image source="xp.skin" placement=bottomright x1=63 y1=166 x2=64 y2=167 color=#FFFFFFFF />
            <text source="xp.font" alignment=left x=+4 y=-2 color=#FF000000 />
        </state>

        <state name="focus">
            <image source="xp.skin" placement=topleft x1=0 y1=149 x2=1 y2=150 color=#FFFFFFFF />
            <image source="xp.skin" placement=top x1=1 y1=149 x2=63 y2=150 color=#FFFFFFFF />
            <image source="xp.skin" placement=topright x1=63 y1=149 x2=64 y2=150 color=#FFFFFFFF />
            <image source="xp.skin" placement=left x1=0 y1=150 x2=1 y2=166 color=#FFFFFFFF />
            <image source="xp.skin" placement=center x1=1 y1=150 x2=63 y2=166 color=#FFFFFFFF />
            <image source="xp.skin" placement=right x1=63 y1=150 x2=64 y2=166 color=#FFFFFFFF />
            <image source="xp.skin" placement=bottomleft x1=0 y1=166 x2=1 y2=167 color=#FFFFFFFF />
            <image source="xp.skin" placement=bottom x1=1 y1=166 x2=63 y2=167 color=#FFFFFFFF />
            <image source="xp.skin" placement=bottomright x1=63 y1=166 x2=64 y2=167 color=#FFFFFFFF />
            <text source="xp.font" alignment=left x=+4 y=-2 color=#FF0000FF />
        </state>

    </style>

    <!-- Der Button-Widget... -->
    <style name="button">

        <!-- Deaktivierter Zustand -->
        <state name="disabled">
            <image source="xp.skin" placement=center x1=13 y1=0 x2=51 y2=23 color=#FFFFFFFF />
            <image source="xp.skin" placement=left x1=0 y1=0 x2=13 y2=23 color=#FFFFFFFF />
            <image source="xp.skin" placement=right x1=51 y1=0 x2=64 y2=23 color=#FFFFFFFF />
            <text source="xp.font" alignment=center y=-2 color=#FF808080 />
        </state>

        <!-- Normalzustand -->
        <state name="normal">
            <image source="xp.skin" placement=center x1=77 y1=0 x2=115 y2=23 color=#FFFFFFFF />
            <image source="xp.skin" placement=left x1=64 y1=0 x2=77 y2=23 color=#FFFFFFFF />
            <image source="xp.skin" placement=right x1=115 y1=0 x2=128 y2=23 color=#FFFFFFFF />
            <text source="xp.font" alignment=center y=-2 color=#FF000000 />
        </state>

        <!-- Zustand für MouseOver (hover-) Effekt -->
        <state name="hover">
            <image source="xp.skin" placement=center x1=141 y1=0 x2=179 y2=23 color=#FFFFFFFF />
            <image source="xp.skin" placement=left x1=128 y1=0 x2=141 y2=23 color=#FFFFFFFF />
            <image source="xp.skin" placement=right x1=179 y1=0 x2=192 y2=23 color=#FFFFFFFF />
            <text source="xp.font" alignment=center y=-2 color=#FF0000FF />
        </state>

        <!-- Gedrückter Zustand -->
        <state name="pressed">
            <image source="xp.skin" placement=center x1=205 y1=0 x2=243 y2=23 color=#FFFFFFFF />
            <image source="xp.skin" placement=left x1=192 y1=0 x2=205 y2=23 color=#FFFFFFFF />
            <image source="xp.skin" placement=right x1=243 y1=0 x2=256 y2=23 color=#FFFFFFFF />
            <text source="xp.font" alignment=center x=+1 y=-2 color=#FF000000 />
        </state>

    </style>

    <!-- Das Toggle-Widget als RadioButton... -->
    <style name="radio">

        <!-- Deaktivierter Zustand -->
        <state name="disabled">
            <image source="xp.skin" placement=center x1=0 y1=24 x2=13 y2=37 color=#FFFFFFFF />
        </state>

        <!-- Normalzustand -->
        <state name="normal">
            <image source="xp.skin" placement=center x1=13 y1=24 x2=26 y2=37 color=#FFFFFFFF />
        </state>

        <!-- Zustand für MouseOver (hover-) Effekt -->
        <state name="hover">
            <image source="xp.skin" placement=center x1=26 y1=24 x2=39 y2=37 color=#FFFFFFFF />
        </state>

        <!-- Gedrückter Zustand -->
        <state name="pressed">
            <image source="xp.skin" placement=center x1=39 y1=24 x2=52 y2=37 color=#FFFFFFFF />
        </state>

        <!-- Deaktivierter Zustand -->
        <state name="disabled_selected">
            <image source="xp.skin" placement=center x1=0 y1=37 x2=13 y2=50 color=#FFFFFFFF />
        </state>

        <!-- Normalzustand -->
        <state name="normal_selected">
            <image source="xp.skin" placement=center x1=13 y1=37 x2=26 y2=50 color=#FFFFFFFF />
        </state>

        <!-- Zustand für MouseOver (hover-) Effekt -->
        <state name="hover_selected">
            <image source="xp.skin" placement=center x1=26 y1=37 x2=39 y2=50 color=#FFFFFFFF />
        </state>

        <!-- Gedrückter Zustand -->
        <state name="pressed_selected">
            <image source="xp.skin" placement=center x1=39 y1=37 x2=52 y2=50 color=#FFFFFFFF />
        </state>

    </style>

    <!-- Das Toggle-Widget als CheckBox... -->
    <style name="check">
        
        <!-- Deaktivierter Zustand -->
        <state name="disabled">
            <image source="xp.skin" placement=center x1=0 y1=51 x2=13 y2=64 color=#FFFFFFFF />
            <text source="xp.font" alignment=left x=+4 y=-2 color=#FF606060 />
        </state>

        <!-- Normalzustand -->
        <state name="normal">
            <image source="xp.skin" placement=center x1=13 y1=51 x2=26 y2=64 color=#FFFFFFFF />
            <text source="xp.font" alignment=left x=+4 y=-2 color=#FF000000 />
        </state>

        <!-- Zustand für MouseOver (hover-) Effekt -->
        <state name="hover">
            <image source="xp.skin" placement=center x1=26 y1=51 x2=39 y2=64 color=#FFFFFFFF />
            <text source="xp.font" alignment=left x=+4 y=-2 color=#FF0000FF />
        </state>

        <!-- Gedrückter Zustand -->
        <state name="pressed">
            <image source="xp.skin" placement=center x1=39 y1=51 x2=52 y2=64 color=#FFFFFFFF />
            <text source="xp.font" alignment=left x=+4 y=-2 color=#FF0000FF />
        </state>

        <!-- Deaktivierter Zustand -->
        <state name="disabled_selected">
            <image source="xp.skin" placement=center x1=0 y1=64 x2=13 y2=77 color=#FFFFFFFF />
            <text source="xp.font" alignment=left x=+4 y=-2 color=#FF606060 />
        </state>

        <!-- Normalzustand -->
        <state name="normal_selected">
            <image source="xp.skin" placement=center x1=13 y1=64 x2=26 y2=77 color=#FFFFFFFF />
            <text source="xp.font" alignment=left x=+4 y=-2 color=#FF000000 />
        </state>

        <!-- Zustand für MouseOver (hover-) Effekt -->
        <state name="hover_selected">
            <image source="xp.skin" placement=center x1=26 y1=64 x2=39 y2=77 color=#FFFFFFFF />
            <text source="xp.font" alignment=left x=+4 y=-2 color=#FF0000FF />
        </state>

        <!-- Gedrückter Zustand -->
        <state name="pressed_selected">
            <image source="xp.skin" placement=center x1=39 y1=64 x2=52 y2=77 color=#FFFFFFFF />
            <text source="xp.font" alignment=left x=+4 y=-2 color=#FF0000FF />
        </state>

    </style>

    <!-- Der Slider-Widget horizontal... -->
    <style name="slider_horizontal">

        <state name="background">
            <image source="xp.skin" placement=center x1=68 y1=78 x2=132 y2=95 color=#FFFFFFFF />
        </state>

        <state name="normal">
            <image source="xp.skin" placement=center x1=71 y1=95 x2=129 y2=112 color=#FFFFFFFF />
            <image source="xp.skin" placement=left x1=68 y1=95 x2=71 y2=112 color=#FFFFFFFF />
            <image source="xp.skin" placement=right x1=129 y1=95 x2=132 y2=112 color=#FFFFFFFF />
        </state>

        <state name="hover">
            <image source="xp.skin" placement=center x1=71 y1=112 x2=129 y2=129 color=#FFFFFFFF />
            <image source="xp.skin" placement=left x1=68 y1=112 x2=71 y2=129 color=#FFFFFFFF />
            <image source="xp.skin" placement=right x1=129 y1=112 x2=132 y2=129 color=#FFFFFFFF />
        </state>

        <state name="pressed">
            <image source="xp.skin" placement=center x1=71 y1=129 x2=129 y2=146 color=#FFFFFFFF />
            <image source="xp.skin" placement=left x1=68 y1=129 x2=71 y2=146 color=#FFFFFFFF />
            <image source="xp.skin" placement=right x1=129 y1=129 x2=132 y2=146 color=#FFFFFFFF />
        </state>

    </style>

    <!-- Der Slider-Widget vertikal... -->
    <style name="slider_vertical">

        <state name="normal">
            <image source="xp.skin" placement=center x1=17 y1=128 x2=34 y2=170 color=#FFFFFFFF />
            <image source="xp.skin" placement=top x1=17 y1=117 x2=34 y2=128 color=#FFFFFFFF />
            <image source="xp.skin" placement=bottom x1=17 y1=170 x2=34 y2=181 color=#FFFFFFFF />
        </state>

        <state name="pressed">
            <image source="xp.skin" placement=center x1=17 y1=128 x2=34 y2=170 color=#FFFFFFFF />
            <image source="xp.skin" placement=top x1=17 y1=117 x2=34 y2=128 color=#FFFFFFFF />
            <image source="xp.skin" placement=bottom x1=17 y1=170 x2=34 y2=181 color=#FFFFFFFF />
        </state>

    </style>

    <style name="cursor">

        <state name="normal">
            <image source="xp.skin" placement=topleft x1=239 y1=227 x2=256 y2=256 color=#FFFFFFFF />
        </state>

    </style>

</theme>
